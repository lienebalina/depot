<% if @line_item == @current_item %>
  <tr class="line-item-highlight">
<% else %>
  <tr>
<% end %>
    <td class="text-right"><%= line_item.quantity %></td>
    <td>&times;</td>
    <td class="pr-2">
      <%= line_item.product.title %>
    </td>
    <td class="text-right font-bold">
      <%= number_to_currency(line_item.total_price) %>
    </td>
    <td class="pl-8">
      <%= button_to '-', line_item_path(line_item), method: :delete, data: { confirm: 'Are you sure?' }, class: "bg-transparent hover:bg-red-500 text-red-700 font-semibold hover:text-white py-2 px-4 border border-red-500 hover:border-transparent rounded" %>
    </td>
    <td>
      <%= button_to '+', increase_quantity_cart_path(line_item), method: :put, class: "bg-transparent hover:bg-green-500 text-green-700 font-semibold hover:text-white py-2 px-4 border border-green-500 hover:border-transparent rounded" %>
    </td>
  </tr>